@using Entities.ViewModels
@using Core.ResultType
@model Result<CategoryViewModel>
@{
    ViewData["Title"] = "Category Edit";
    Layout = "~/Pages/_Layout.cshtml";
}

<div class="row">
    <h2 style="text-align:center">Edit Category</h2>
    
    <div class="align-center">
        <div>
            <section>
                <form id="form-category" class="form-horizontal form-bordered" method="post">
                    <input type="hidden" asp-for="@Model.Data.CategoryDO.Id" />
                    <input type="hidden" asp-for="@Model.Data.CategoryDO.CreateTime" />
                    <input type="hidden" asp-for="@Model.Data.CategoryDO.CreateUserId" />
                    <div class="form-body">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label ">Category Name</label>

                                <input class="form-control" type="text" asp-for="@Model.Data.CategoryDO.CategoryName" />

                            </div>


                            <div class="form-group">
                                <label class="control-label ">Category Code</label>
                                <input class="form-control" type="text" asp-for="@Model.Data.CategoryDO.CategoryCode" />
                            </div>

                            <div class="form-group">
                                <label class="control-label ">Category Description</label>
                                <input class="form-control" type="text" asp-for="@Model.Data.CategoryDO.Description" />
                            </div>

                            <div class="form-group">
                                <label class="control-label ">Category Display Order</label>
                                <input class="form-control" type="number" asp-for="@Model.Data.CategoryDO.DisplayOrder" />
                            </div>
                            <div class="form-group">
                                <label class="control-label ">Category</label>

                                <select asp-for="@Model.Data.CategoryDO.ParentCategoryId" class="btn btn-default form-control" data-label="left" data-width="100%">
                                    @foreach (var item in Model.Data.CategoryList)
                                    {
                                        <option value="@item.Id">@item.CategoryName</option>
                                    }
                                </select>

                            </div>

                            <div class="form-group">
                                <input class="" type="checkbox" style="float:left" asp-for="@Model.Data.CategoryDO.IsActive" />
                                <label class="">Category IsActive</label>

                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <input type="button" onclick="MApplication.Index.Category.edit()" class="btn green" value="Edit">
                                        <a asp-controller="Category" asp-action="Index" class="btn">Back</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>